{% extends 'base.html.twig' %}

{% block title %}Liste des projets{{ parent() }}{% endblock %}

{% set manager_role = constant('App\\Enum\\EmployeeRole::Manager').value %}

{% block body %}
    <header>
        <div id="title-page">
            <h1>Projets</h1>
        </div>
        <div id="current-user">
            {% include 'currentUser.html.twig' %}
        </div>
    </header>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div id="content">
        <div id="projects-container">
            {% for project in projects %}
                <article class="card-project">
                    <a href="{{ path('app_project_detail', {id: project.id}) }}">
                        <h2>{{ project.name }}</h2>
                    </a>
                    {% if is_granted(manager_role) %}
                    <div class="card-project-icons">
                        <a href="{{ path('app_project_edit', { id: project.id}) }}" title="Modifier"><i
                                class="fa-solid fa-pen"></i></a>
                        <a href="{{ path('app_project_confirm_archive', {id: project.id}) }}" title="Archiver"><i
                                class="fa-solid fa-trash"></i></a>
                    </div>
            {% endif %}
                </article>
            {% endfor %}
            {% if is_granted(manager_role) %}
                <article class="card-project">
                    <a href="{{ path('app_project_new') }}">
                        <i class="fa-solid fa-circle-plus add-project-icon"></i>
                        <h2>Ajouter un projet</h2>
                    </a>
                </article>
            {% endif %}
        </div>
    </div>
{% endblock %}
